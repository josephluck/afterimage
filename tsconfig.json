{
  "compilerOptions": {
    "target": "es3",
    "jsx": "react",
    "module": "commonjs",
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "lib",
    "sourceMap": true,
    "lib": ["es6", "es7", "dom"],
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "removeComments": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["example/**/*"]
}
